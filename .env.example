# Application
APP_NAME=HypertroQ Backend
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database - Google Cloud SQL or Local
# For Google Cloud SQL (production):
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_ID
# DIRECT_URL=postgresql+asyncpg://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_ID
# For local development:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/hypertroq
DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=2

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=hypertroq-storage

# Google Generative AI
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# LemonSqueezy
LEMONSQUEEZY_API_KEY=your-lemonsqueezy-api-key
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@hypertroq.com
EMAILS_FROM_NAME=HypertroQ

# Logging
LOG_LEVEL=INFO
